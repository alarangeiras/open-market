{
  "compilerOptions": {
    "target": "es5",            
    "experimentalDecorators": true,            
    "module": "commonjs",                   
    "outDir": "./dist/",                    
    "rootDir": ".",                     
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      { "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }
    ]    
  }
}