{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      { "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }
    ]
  },
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
